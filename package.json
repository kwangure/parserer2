{
	"name": "parserer2",
	"version": "0.0.0",
	"description": "A Svelte parser",
	"scripts": {
		"build": "wireit",
		"check": "wireit",
		"dev": "vite dev",
		"format": "wireit",
		"lint": "wireit",
		"pre-commit": "wireit",
		"preview": "vite preview",
		"prepare": "husky install",
		"release": "release-it",
		"test": "wireit"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"devDependencies": {
		"@kwangure/eslint-config-svelte": "^0.2.9",
		"@replit/codemirror-lang-svelte": "^6.0.0",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"@sveltejs/package": "^2.0.2",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.39.0",
		"husky": "^8.0.3",
		"postcss": "^8.4.23",
		"publint": "^0.1.11",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.0.4",
		"vite": "^4.3.0",
		"vitest": "^0.30.1",
		"wireit": "^0.9.5"
	},
	"type": "module",
	"wireit": {
		"build": {
			"command": "vite build",
			"files": [
				"src/**/*.{js,ts,svelte}",
				"static/**",
				"svelte.config.js",
				"vite.config.js"
			],
			"output": [
				"build/**"
			]
		},
		"check": {
			"command": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
			"files": [
				"{src,test}/**/*.{js,ts,svelte}",
				"tsconfig.json"
			],
			"output": []
		},
		"format": {
			"command": "eslint \"{src,test}/**/*.{js,svelte}\" --color --cache --fix",
			"files": [
				"{src,test}/**/*.{js,ts,svelte}",
				".eslintignore",
				".eslintrc.cjs"
			],
			"output": []
		},
		"lint": {
			"command": "eslint \"{src,test}/**/*.{js,svelte}\" --color --cache",
			"files": [
				"{src,test}/**/*.{js,ts,svelte}",
				".eslintignore",
				".eslintrc.cjs"
			],
			"output": []
		},
		"pack": {
			"command": "npm pack",
			"dependencies": [
				"publint"
			],
			"files": [
				"dist/**",
				"!**/*.test.*",
				"!**/*.spec.*",
				"LICENSE",
				"README.md"
			],
			"output": [
				"parserer2*.tgz"
			]
		},
		"package": {
			"command": "svelte-package",
			"files": [
				"src/lib/**/*.{js,css,ts,svelte}"
			],
			"output": [
				"dist/**"
			]
		},
		"pre-commit": {
			"dependencies": [
				"test",
				"check",
				"format",
				"publint"
			]
		},
		"publint": {
			"command": "publint",
			"dependencies": [
				"package"
			],
			"files": [
				"dist/**",
				"package.json"
			],
			"output": []
		},
		"test": {
			"command": "vitest run",
			"files": [
				"src/**/*.{js,ts}",
				"tests/**/*.{js,ts}"
			],
			"output": []
		}
	},
	"dependencies": {
		"@kwangure/strawberry": "^0.59.1",
		"hine": "^0.0.9"
	}
}
